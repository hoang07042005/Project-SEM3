@model eAdministrationLabs.Dtos.Create.CreateLabDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LabName" class="control-label"></label>
                <input asp-for="LabName" class="form-control" style="border: 1px solid #ccc; border-radius: 6px;" />
                <span asp-validation-for="LabName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" style="border: 1px solid #ccc; border-radius: 6px;" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" style="border: 1px solid #ccc; border-radius: 6px;" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusLabId" class="control-label"></label>
                <select asp-for="StatusLabId" class="form-control" asp-items="ViewBag.StatusLabId" style="border: 1px solid #ccc; border-radius: 6px;"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

