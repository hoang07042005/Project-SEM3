@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-center">Admin Dashboard</h1>

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <a class="navbar-brand" href="#">Admin Panel</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link active" href="#">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Requests</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Classes</a>
            </li>
        </ul>
    </div>
</nav>

<div class="alert alert-success" role="alert">
    Welcome to the Admin Dashboard! Here you can manage users and requests.
</div>

<div class="row g-3">
    @foreach (var card in new[] {
    new { Title = "Total Users", Count = ViewData["TotalUsers"], BgColor = "bg-info", Icon = "fas fa-users" },
    new { Title = "Total Requests", Count = ViewData["TotalRequests"], BgColor = "bg-secondary", Icon = "fas fa-file-alt" },
    new { Title = "Completed Requests", Count = ViewData["CompletedRequests"], BgColor = "bg-success", Icon = "fas fa-check-circle" },
    new { Title = "Pending Requests", Count = ViewData["PendingRequests"], BgColor = "bg-warning", Icon = "fas fa-clock" },
    new { Title = "Total Classes", Count = ViewData["TotalClasses"], BgColor = "bg-dark", Icon = "fas fa-chalkboard-teacher" }
    })
    {
        <div class="col-md-2">
            <div class="card text-white @card.BgColor">
                <div class="card-body d-flex align-items-center">
                    <i class="@card.Icon fa-2x me-3"></i>
                    <div>
                        <h5 class="card-title">@card.Title</h5>
                        <p class="card-text display-6">@card.Count</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <canvas id="myChart"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const data = [
    @ViewData["TotalUsers"],
    @ViewData["TotalRequests"],
    @ViewData["CompletedRequests"],
    @ViewData["PendingRequests"],
    @ViewData["TotalClasses"]
        ];
        const ctx = document.getElementById('myChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Total Users', 'Total Requests', 'Completed Requests', 'Pending Requests', 'Total Classes'],
                datasets: [{
                    label: 'Statistics',
                    data: data,
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 10px;
        min-height: 100px;
    }

    .alert {
        margin-bottom: 20px;
    }
</style>
