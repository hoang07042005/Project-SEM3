@model eAdministrationLabs.Models.EquiLab

@{
    ViewData["Title"] = "Edit Equipment in Lab";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Edit Equipment in Lab</h1>
    <p class="text-center text-muted">Modify the equipment assigned to the lab below.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="shadow p-4 rounded" style="background-color: #f9f9f9;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Equipment Dropdown -->
                <div class="form-group mb-4">
                    <label asp-for="EquipmentId" class="form-label text-primary fw-bold">Equipment</label>
                    <select asp-for="EquipmentId" class="form-select" asp-items="ViewBag.EquipmentId"></select>
                    <span asp-validation-for="EquipmentId" class="text-danger"></span>
                </div>

                <!-- Lab Dropdown -->
                <div class="form-group mb-4">
                    <label asp-for="LabId" class="form-label text-primary fw-bold">Lab</label>
                    <select asp-for="LabId" class="form-select" asp-items="ViewBag.LabId"></select>
                    <span asp-validation-for="LabId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f8fc;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
    }

    .form-label {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .form-select, .form-control {
        padding: 0.75rem;
        font-size: 1rem;
        border-radius: 8px;
        border: 1px solid #ced4da;
    }

        .form-select:focus, .form-control:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn {
        font-size: 1rem;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
