@model eAdministrationLabs.Models.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Edit User</h1>
    <p class="text-center text-muted">Update the user details below.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="shadow p-4 rounded" style="background-color: #f9f9f9;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />

                <!-- Full Name -->
                <div class="form-group mb-4">
                    <label asp-for="FullName" class="form-label text-primary fw-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group mb-4">
                    <label asp-for="Email" class="form-label text-primary fw-bold">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label text-primary fw-bold">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Created At -->
                <div class="form-group mb-4">
                    <label asp-for="CreatedAt" class="form-label text-primary fw-bold">Created At</label>
                    <input asp-for="CreatedAt" type="datetime-local" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <!-- Updated At -->
                <div class="form-group mb-4">
                    <label asp-for="UpdatedAt" class="form-label text-primary fw-bold">Updated At</label>
                    <input asp-for="UpdatedAt" type="datetime-local" class="form-control" />
                    <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                </div>

                <!-- Save Button -->
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f8fc;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
    }

    .form-label {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        padding: 0.75rem;
        font-size: 1rem;
        border-radius: 8px;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn {
        font-size: 1rem;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
