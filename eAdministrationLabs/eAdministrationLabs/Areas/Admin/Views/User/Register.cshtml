@model eAdministrationLabs.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Register</h1>
    <h4 class="text-center">Create a New Account</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Register" method="post" class="shadow p-4 rounded" style="background-color: #f9f9f9;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Full Name -->
                <div class="form-group mb-4">
                    <label asp-for="FullName" class="control-label text-primary fw-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group mb-4">
                    <label asp-for="Email" class="control-label text-primary fw-bold">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group mb-4">
                    <label asp-for="Password" class="control-label text-primary fw-bold">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="control-label text-primary fw-bold">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Select Roles -->
                <div class="form-group mb-4">
                    <label class="control-label text-primary fw-bold">Select Roles</label>
                    <div class="row">
                        @foreach (var role in ViewBag.Roles)
                        {
                            <div class="col-md-6 mb-2">
                                <div class="form-check">
                                    <input type="checkbox" name="SelectedRoleIds" value="@role.Id" class="form-check-input" id="role_@role.Id" />
                                    <label for="role_@role.Id" class="form-check-label">@role.RoleName</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f8fc;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
    }

    h4 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .form-label {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        padding: 0.75rem;
        font-size: 1rem;
        border-radius: 8px;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn {
        font-size: 1rem;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
