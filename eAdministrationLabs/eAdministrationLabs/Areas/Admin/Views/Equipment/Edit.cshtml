@model eAdministrationLabs.Models.Equipment

@{
    ViewData["Title"] = "Edit Equipment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Edit Equipment</h1>
    <p class="text-center text-muted">Update equipment details below.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="shadow p-4 rounded" style="background-color: #f9f9f9;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Name Equipment -->
                <div class="form-group mb-4">
                    <label asp-for="NameEquipment" class="form-label text-primary fw-bold">Equipment Name</label>
                    <input asp-for="NameEquipment" class="form-control" placeholder="Enter equipment name" />
                    <span asp-validation-for="NameEquipment" class="text-danger"></span>
                </div>

                <!-- Type -->
                <div class="form-group mb-4">
                    <label asp-for="Type" class="form-label text-primary fw-bold">Type</label>
                    <input asp-for="Type" class="form-control" placeholder="Enter type of equipment" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <!-- Purchase Date -->
                <div class="form-group mb-4">
                    <label asp-for="PurchaseDate" class="form-label text-primary fw-bold">Purchase Date</label>
                    <input asp-for="PurchaseDate" type="date" class="form-control" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f8fc;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
    }

    .form-label {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        padding: 0.75rem;
        font-size: 1rem;
        border-radius: 8px;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn {
        font-size: 1rem;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
