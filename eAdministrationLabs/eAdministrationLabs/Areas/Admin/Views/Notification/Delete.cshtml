@model eAdministrationLabs.Models.Notification

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Notification</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReadStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReadStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>
    
    <form id="deleteForm" asp-action="Delete" asp-controller="Notification" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirmDelete();" />
        |
        <a asp-action="Index" asp-controller="Notification">Back to List</a>
    </form>
</div>

<script type="text/javascript">
    function confirmDelete() {
        // Hiển thị hộp thoại xác nhận
        var confirmResult = confirm("Are you sure you want to delete this notification?");

        // Nếu người dùng chọn "Yes", thực hiện xóa (submit form)
        if (confirmResult) {
            return true; // Tiến hành submit form
        } else {
            return false; // Hủy bỏ submit và không làm gì
        }
    }
</script>
