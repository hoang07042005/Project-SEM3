@model eAdministrationLabs.Models.ViewModels.CreateLabUsageLogViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLabs.cshtml";
}
<link href="~/layoutlabs/css/bg_title.css" rel="stylesheet" />

<div class="background-image">
    <div class="content">
        <h3>Labs / Add </h3>
    </div>
</div>

<style>
    /* Nền xám nhạt */
    body {
        background-color: #eaeaea;
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 1600px;
        width: 100%;
        overflow-x: hidden; /* Ẩn thừa nếu có */
        margin: 0 auto; /* Đảm bảo căn giữa */
        padding: 0;
    }

    /* Tiêu đề */
    h1 {
        font-size: 2rem;
        font-weight: bold;
        color: #000;
    }

    /* Thẻ card */
    .card {
        border: none;
        border-radius: 10px;
    }

    /* Nhãn và input */
    label {
        font-weight: bold;
        font-size: 1rem;
        display: block;
        margin-bottom: 5px;
        margin-left: 5px;
    }

    button.btn.btn-dark.px-4 {
        margin-top: 35px;
    }

    /* Cải thiện form-control */
    /* Cải thiện phần tử form-control */
    /* Cải thiện phần tử form-control */
    .form-control {
        font-size: 1rem; /* Đảm bảo kích thước chữ đủ lớn */
        padding: 10px; /* Tăng padding đều */
        width: 100%;
        box-sizing: border-box;
        border-radius: 15px;
        margin-bottom: 12px;
        height: auto; /* Tự động điều chỉnh chiều cao nếu nội dung nhiều */
    }

    /* Phần tử select dành riêng cho Lab và User */
    .form-group select {
        height: auto; /* Tự điều chỉnh chiều cao theo nội dung */
        min-height: 50px; /* Đặt chiều cao tối thiểu */
        padding: 12px; /* Đảm bảo padding không cắt chữ */
        line-height: 1.5; /* Tăng khoảng cách giữa các dòng */
    }

    /* Cải thiện nhãn (label) */
    label {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    /* Khoảng cách giữa các nhóm form */
    .form-group {
        margin-bottom: 20px;
    }


        /* Cải thiện phần tử user và lab */
        .form-group input,
        .form-group select {
            height: 50px; /* Đảm bảo chiều cao đủ lớn */
            padding: 12px; /* Điều chỉnh padding để không bị cắt chữ */
        }

    /* Nút bấm */
    .btn-dark {
        background-color: #000;
        border-color: #000;
        color: #fff;
        padding: 12px 24px;
        border-radius: 30px;
        width: 100%; /* Đảm bảo nút Create có chiều rộng bằng nhau với các input */
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-dark:hover {
            background-color: #333;
            border-color: #333;
        }

    /* Liên kết "Back to List" */
    a {
        color: #000;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <!-- Cột bên trái -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="CreateLabUsageLogDto.LabId" class="control-label text-black">Lab</label>
                                    <select asp-for="CreateLabUsageLogDto.LabId" class="form-control border-dark bg-light text-black" asp-items="Model.Labs" ></select>
                                </div>
                                <div class="form-group mb-4">
                                    <label asp-for="CreateLabUsageLogDto.UserId" class="control-label text-black">User</label>
                                    <select asp-for="CreateLabUsageLogDto.UserId" class="form-control border-dark bg-light text-black" asp-items="Model.Users"></select>
                                </div>
                                <div class="form-group mb-4">
                                    <label asp-for="CreateLabUsageLogDto.Purpose" class="control-label text-black">Purpose</label>
                                    <input asp-for="CreateLabUsageLogDto.Purpose" class="form-control border-dark bg-light text-black" placeholder="Enter purpose" />
                                    <span asp-validation-for="CreateLabUsageLogDto.Purpose" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Cột bên phải -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="CreateLabUsageLogDto.StartTime" class="control-label text-black">Start Time</label>
                                    <input asp-for="CreateLabUsageLogDto.StartTime" class="form-control border-dark bg-light text-black" placeholder="dd/mm/yyyy --:-- --" />
                                    <span asp-validation-for="CreateLabUsageLogDto.StartTime" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <label asp-for="CreateLabUsageLogDto.EndTime" class="control-label text-black">End Time</label>
                                    <input asp-for="CreateLabUsageLogDto.EndTime" class="form-control border-dark bg-light text-black" placeholder="dd/mm/yyyy --:-- --" />
                                    <span asp-validation-for="CreateLabUsageLogDto.EndTime" class="text-danger"></span>
                                </div>
                                <div class="form-group d-flex justify-content-end">
                                    <button type="submit" class="btn btn-dark px-4">Create</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="text-dark text-decoration-none">← Back to List</a>
            </div>
        </div>
    </div>
</div>
