
@model eAdministrationLabs.Models.ViewModels.CreateLabUsageLogViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLabs.cshtml";
}
<link href="~/layoutlabs/css/labs/editlab.css" rel="stylesheet" />
<link href="~/layoutlabs/css/bg_title.css" rel="stylesheet" />
<div class="background-image">
    <div class="content">
        <h3>Labs / Add </h3>
    </div>
</div>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-body text-dark" style="background-color: #ffffff;">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <!-- Cột bên trái -->
                            <div class="col-md-6" style="margin-top:15px;">
                                <div class="form-group mb-4">
                                    <label asp-for="CreateLabUsageLogDto.LabId" class="control-label text-black">Lab</label>
                                    <select asp-for="CreateLabUsageLogDto.LabId" class="form-control border-dark bg-light text-black" asp-items="Model.Labs"
                                            style="height: 50px; font-size: 18px;"></select>
                                </div>
                                <div id="form-section">
                                    <div class="form-group">
                                        <label asp-for="CreateLabUsageLogDto.UserId" class="control-label"></label>
                                        <select asp-for="CreateLabUsageLogDto.UserId" class="form-control" asp-items="Model.Users"></select>
                                    </div>
                                    <!-- Status Request -->
                                    <div class="form-group">
                                        <label class="control-label">Status Log</label>
                                        <input type="hidden" name="StatusLogId" value=1 />
                                    </div>
                                </div>
                                <div class="form-group mb-4" style="margin-top:15px;">
                                    <label asp-for="CreateLabUsageLogDto.Purpose" class="control-label text-black">Purpose</label>
                                    <input asp-for="CreateLabUsageLogDto.Purpose" class="form-control border-dark bg-light text-black" placeholder="Enter purpose" style="height: 50px; font-size: 18px;" />
                                    <span asp-validation-for="CreateLabUsageLogDto.Purpose" class="text-danger"></span>
                                </div>

                            </div>

                            <!-- Cột bên phải -->
                            <div class="col-md-6" style="margin-top:15px;">
                                <div class="form-group mb-4">
                                    <label asp-for="CreateLabUsageLogDto.StartTime" class="control-label text-black">Start Time</label>
                                    <input asp-for="CreateLabUsageLogDto.StartTime" class="form-control border-dark bg-light text-black" placeholder="dd/mm/yyyy --:-- --" style="height: 50px; font-size: 18px;" />
                                    <span asp-validation-for="CreateLabUsageLogDto.StartTime" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4" style="margin-top:15px;">
                                    <label asp-for="CreateLabUsageLogDto.EndTime" class="control-label text-black">End Time</label>
                                    <input asp-for="CreateLabUsageLogDto.EndTime" class="form-control border-dark bg-light text-black" placeholder="dd/mm/yyyy --:-- --" style="height: 50px; font-size: 18px;" />
                                    <span asp-validation-for="CreateLabUsageLogDto.EndTime" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="d-flex justify-content-between mt-4" style="margin-left: auto;">
                                <button type="submit" class="btn btn-dark px-4">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3" style="margin-top: 10vh;">
                <a asp-action="Index" class="text-dark text-decoration-none">← Back to List</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('form-section').style.display = 'none';
</script>