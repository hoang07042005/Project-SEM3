@model eAdministrationLabs.Models.ViewModels.CreateLabUsageLogViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLabs.cshtml";
}
<link href="~/layoutlabs/css/labs/createlab.css" rel="stylesheet" />
<link href="~/layoutlabs/css/bg_title.css" rel="stylesheet" />

<div class="background-image">
    <div class="content">
        <h3>Labs / Add</h3>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Add border to the entire form -->
            <div class="border-container" style="border: 2px solid #ccc; padding: 20px; border-radius: 7px;">
                <form asp-action="Create">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Lab and User in the same row -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="CreateLabUsageLogDto.LabId" class="control-label">Select Laboratory</label>
                            <select asp-for="CreateLabUsageLogDto.LabId" class="form-control border-dark bg-light">
                                <option value="" disabled selected>Select a lab</option>
                                @foreach (var lab in Model.Labs)
                                {
                                    <option value="@lab.Value">@lab.Text</option>
                                }
                            </select>
                            <span asp-validation-for="CreateLabUsageLogDto.LabId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="CreateLabUsageLogDto.UserId" class="control-label">Select User</label>
                            <select asp-for="CreateLabUsageLogDto.UserId" class="form-control border-dark bg-light">
                                <option value="" disabled selected>Select a user</option>
                                @foreach (var user in Model.Users)
                                {
                                    <option value="@user.Value">@user.Text</option>
                                }
                            </select>
                            <span asp-validation-for="CreateLabUsageLogDto.UserId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Start Time and End Time in the same row -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="CreateLabUsageLogDto.StartTime" class="control-label">Start Time</label>
                            <input asp-for="CreateLabUsageLogDto.StartTime" class="form-control border-dark bg-light" placeholder="dd/mm/yyyy --:-- --" />
                            <span asp-validation-for="CreateLabUsageLogDto.StartTime" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="CreateLabUsageLogDto.EndTime" class="control-label">End Time</label>
                            <input asp-for="CreateLabUsageLogDto.EndTime" class="form-control border-dark bg-light" placeholder="dd/mm/yyyy --:-- --" />
                            <span asp-validation-for="CreateLabUsageLogDto.EndTime" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Purpose -->
                    <div class="form-group">
                        <label asp-for="CreateLabUsageLogDto.Purpose" class="control-label">Purpose</label>
                        <textarea asp-for="CreateLabUsageLogDto.Purpose" class="form-control border-dark bg-light" placeholder="Enter purpose"></textarea>
                        <span asp-validation-for="CreateLabUsageLogDto.Purpose" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-dark">Submit </button>
                    </div>
                    
                </form>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="text-dark text-decoration-none">← Back to List</a>
            </div>
        </div>
    </div>
</div>
