@model eAdministrationLabs.Models.LabUsageLog

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutLabs.cshtml";
}
<link href="~/layoutlabs/css/bg_title.css" rel="stylesheet" />
<link href="~/layoutlabs/css/labs/deletelab.css" rel="stylesheet" />
<div class="background-image">
    <div class="content">
        <h3>Labs / Delete</h3>
    </div>
</div>

<div class="container mt-5">
    <div class="card shadow-lg detail-card">

        <!-- Confirmation Header -->
        <div class="card-header  text-white text-center">
            <h4 class="fw-bold">Confirm Deletion</h4>
        </div>

        <!-- Main Content -->
        <div class="card-body">
            <p class="text-center text-muted mb-4">
                Are you sure you want to delete this record? This action cannot be undone.
            </p>

            <div class="row g-4">
                <!-- Lab -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-flask detail-icon text-primary"></i>
                        <h6>@Html.DisplayNameFor(model => model.Lab)</h6>
                        <p>@Html.DisplayFor(model => model.Lab.LabName)</p>
                    </div>
                </div>
                <!-- User -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-user detail-icon text-info"></i>
                        <h6>@Html.DisplayNameFor(model => model.User)</h6>
                        <p>@Html.DisplayFor(model => model.User.FullName)</p>
                    </div>
                </div>
                <!-- Purpose -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-clipboard-list detail-icon text-success"></i>
                        <h6>@Html.DisplayNameFor(model => model.Purpose)</h6>
                        <p>@Html.DisplayFor(model => model.Purpose)</p>
                    </div>
                </div>
                <!-- Start Time -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-clock detail-icon text-warning"></i>
                        <h6>@Html.DisplayNameFor(model => model.StartTime)</h6>
                        <p>@Html.DisplayFor(model => model.StartTime)</p>
                    </div>
                </div>
                <!-- End Time -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-clock detail-icon text-danger"></i>
                        <h6>@Html.DisplayNameFor(model => model.EndTime)</h6>
                        <p>@Html.DisplayFor(model => model.EndTime)</p>
                    </div>
                </div>
                <!-- Created At -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-calendar-alt detail-icon text-secondary"></i>
                        <h6>@Html.DisplayNameFor(model => model.CreatedAt)</h6>
                        <p>@Html.DisplayFor(model => model.CreatedAt)</p>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <form asp-action="Delete" class="d-flex justify-content-between">
                <button type="submit" class="btn btn-link text-danger fw-bold px-0">
                    <i class="fas fa-trash-alt me-2"></i>Delete
                </button>
                <a href="@Url.Action("Index")" class="btn btn-link text-secondary fw-bold px-0">
                    <i class="fas fa-arrow-left me-2"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>
