@model eAdministrationLabs.Models.LabUsageLog

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutLabs.cshtml";
}
<link href="~/layoutlabs/css/labs/deletelab.css" rel="stylesheet" />
<link href="~/layoutlabs/css/bg_title.css" rel="stylesheet" />

<div class="background-image">
    <div class="content text-center text-light py-4">
        <h3 class="fw-bold">Labs / Delete</h3>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="fw-bold mb-0">Confirm Deletion</h4>
                </div>
                <div class="card-body bg-light">
                    <p class="text-center text-muted mb-4">
                        Are you sure you want to delete this record? This action cannot be undone.
                    </p>
                    <hr class="mb-4" />
                    <dl class="row mb-4">
                        <dt class="col-sm-5 text-muted">@Html.DisplayNameFor(model => model.Purpose)</dt>
                        <dd class="col-sm-7 fw-bold">@Html.DisplayFor(model => model.Purpose)</dd>

                        <dt class="col-sm-5 text-muted">@Html.DisplayNameFor(model => model.StartTime)</dt>
                        <dd class="col-sm-7 fw-bold">@Html.DisplayFor(model => model.StartTime)</dd>

                        <dt class="col-sm-5 text-muted">@Html.DisplayNameFor(model => model.EndTime)</dt>
                        <dd class="col-sm-7 fw-bold">@Html.DisplayFor(model => model.EndTime)</dd>

                        <dt class="col-sm-5 text-muted">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                        <dd class="col-sm-7 fw-bold">@Html.DisplayFor(model => model.CreatedAt)</dd>

                        <dt class="col-sm-5 text-muted">@Html.DisplayNameFor(model => model.Lab)</dt>
                        <dd class="col-sm-7 fw-bold">@Html.DisplayFor(model => model.Lab.LabName)</dd>

                        <dt class="col-sm-5 text-muted">@Html.DisplayNameFor(model => model.User)</dt>
                        <dd class="col-sm-7 fw-bold">@Html.DisplayFor(model => model.User.FullName)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="  text-white btn btn-danger btn-lg px-4">
                                <i class="fas fa-trash-alt me-2"></i>Delete
                            </button>
                            
                        </div>
                    </form>
                    
                </div>
                

            </div>
            <div class="d-flex justify-content-end mt-3">
                <a href="@Url.Action("Index")" class="btn btn-link text-decoration-none text-secondary fw-bold px-0">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>

        </div>
       
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

 