@model IEnumerable<eAdministrationLabs.Models.LabUsageLog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLabs.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
<link href="~/layoutlabs/css/bg_title.css" rel="stylesheet" />
<style>
    /* Thay đổi kích thước container cho cân đối */
    .container {
        max-width: 1350px; /* Tạo độ rộng tối đa */
        margin: 0 auto;
    }

    /* Tạo không gian giữa các cột trong table */
    .table th, .table td {
        padding: 15px;
        text-align: center;
    }

    /* Sử dụng d-flex để căn chỉnh các icon nằm cùng 1 hàng */
    .table a {
        color: #000;
        text-decoration: none;
    }

        /* Điều chỉnh khoảng cách giữa các icon */
        .table a i {
            font-size: 1.2rem; /* Điều chỉnh kích thước icon */
        }

        /* Thêm hiệu ứng khi hover các icon */
        .table a:hover i {
            color: #007bff; /* Màu khi hover */
        }

        .table a:hover {
            text-decoration: underline;
        }
</style>
<div class="background-image">
    <div class="content">
        <h3>Request / Index</h3>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm" style="background-color: #f7f7f7;">
                <div class="card-body">

                    <p>
                        <a asp-action="Create" class="btn btn-dark" style="margin-bottom:5vh;">Create New</a>
                    </p>

                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Lab)</th>
                                <th>@Html.DisplayNameFor(model => model.User)</th>
                                <th>@Html.DisplayNameFor(model => model.Purpose)</th>
                                <th>@Html.DisplayNameFor(model => model.StartTime)</th>
                                <th>@Html.DisplayNameFor(model => model.EndTime)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Lab.LabName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.User.FullName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Purpose)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                    <td>
                                        <!-- Sử dụng d-flex để các icon nằm cùng 1 hàng -->
                                        <div class="d-flex justify-content-start">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-dark mx-2">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-dark mx-2">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-dark mx-2">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
          @*   <div class="text-center mt-3">
                <a asp-action="Index" class="text-dark text-decoration-none">← Back to List</a>
            </div> *@
        </div>
    </div>

</div>
