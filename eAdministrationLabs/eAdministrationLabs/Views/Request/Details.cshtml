@model eAdministrationLabs.Models.ViewModels.RequestViewModel

@{
    ViewData["Title"] = "Request Details";
    Layout = "~/Views/Shared/_LayoutLabs.cshtml";
}

<link href="~/layoutlabs/css/bg_title.css" rel="stylesheet" />
<link href="~/layoutlabs/css/request/requestdetail.css" rel="stylesheet" />

<div class="background-image">
    <div class="content">
        <h3>Request / Details</h3>
    </div>
</div>

<div class="container mt-5">
    <div class="card shadow-lg detail-card">
        

        <!-- Body -->
        <div class="card-body">
            <div class="row g-4 text-center">
                <!-- Lab Name -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-flask detail-icon text-primary"></i>
                        <h6>Lab Name</h6>
                        <p>@Model.LabName</p>
                    </div>
                </div>
                <!-- Equipment Name -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-tools detail-icon text-info"></i>
                        <h6>Equipment Name</h6>
                        <p>@Model.EquipmentName</p>
                    </div>
                </div>
                <!-- Status -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-clipboard-check detail-icon text-success"></i>
                        <h6>Status</h6>
                        <p>@Model.StatusName</p>
                    </div>
                </div>
                <!-- Created At -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-calendar-alt detail-icon text-secondary"></i>
                        <h6>Created At</h6>
                        <p>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    </div>
                </div>
                <!-- Changed By -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-user-edit detail-icon text-warning"></i>
                        <h6>Changed By</h6>
                        <p>@Model.ChangedBy</p>
                    </div>
                </div>
                <!-- Notes -->
                <div class="col-md-4">
                    <div class="detail-item">
                        <i class="fas fa-sticky-note detail-icon text-danger"></i>
                        <h6>Notes</h6>
                        <p>@Model.Notes</p>
                    </div>
                </div>
            </div>

            <!-- Attached Image -->
            @if (!string.IsNullOrEmpty(Model.ImageBase64))
            {
                <div class="text-center mt-4">
                    <h6 class="font-weight-bold">Attached Image</h6>
                    <img id="previewImage" src="data:image/jpeg;base64,@Model.ImageBase64"
                         class="img-fluid shadow-sm"
                         style="max-width: 300px; border-radius: 10px;"
                         alt="Request Image">
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="card-footer text-center">
            <a href="@Url.Action("Notifications", "Request")" class="text-dark text-decoration-none">
                <i class="fas fa-arrow-left mr-2"></i> Back to List
            </a>
        </div>
    </div>
</div>
