@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<eAdministrationLabs.Models.Notification>
<link href="~/layoutlabs/css/request/notification.css" rel="stylesheet" />
<link href="~/layoutlabs/css/bg_title.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="background-image text-center py-5" style="background-color: #1a73e8;">
    <h3 class="display-4 text-white">Notifications</h3>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Tabs -->

            <ul class="nav nav-tabs" id="notificationTabs" role="tablist" style="border-bottom: 2px solid #dee2e6;">
                <li class="nav-item">
                    <a class="nav-link" id="all-tab" data-bs-toggle="tab" href="#all" role="tab" aria-selected="false">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" id="unread-tab" data-bs-toggle="tab" href="#unread" role="tab" aria-selected="true">Unread</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="read-tab" data-bs-toggle="tab" href="#read" role="tab" aria-selected="false">Read</a>
                </li>
                
            </ul>

            <div class="tab-content mt-4">
                <!-- Tab Content -->
                <div class="tab-pane fade show active" id="unread" role="tabpanel">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Message</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var notification in Model.Where(n => n.ReadStatus == "Unread"))
                            {
                                <tr>
                                    <td>@notification.Message</td>
                                    <td><span class="badge bg-warning text-dark">Unread</span></td>
                                    <td>@notification.CreatedAt</td>
                                    <td>
                                        @if (notification.RequestId.HasValue)
                                        {
                                            <a href="@Url.Action("Details", "Request", new { id = notification.RequestId })" class="btn btn-sm btn-outline-primary">Details</a>
                                        }
                                        else if (notification.LabUsageLogId.HasValue)
                                        {
                                            <a href="@Url.Action("Details", "LabUsageLogs", new { id = notification.LabUsageLogId })" class="btn btn-sm btn-outline-primary">Reservation</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No details available</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="tab-pane fade" id="read" role="tabpanel">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Message</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var notification in Model.Where(n => n.ReadStatus == "Read"))
                            {
                                <tr>
                                    <td>@notification.Message</td>
                                    <td><span class="badge bg-success text-white">Read</span></td>
                                    <td>@notification.CreatedAt</td>
                                    <td>
                                        @if (notification.RequestId.HasValue)
                                        {
                                            <a href="@Url.Action("Details", "Request", new { id = notification.RequestId })" class="btn btn-sm btn-outline-primary">Details</a>
                                        }
                                        else if (notification.LabUsageLogId.HasValue)
                                        {
                                            <a href="@Url.Action("Details", "LabUsageLogs", new { id = notification.LabUsageLogId })" class="btn btn-sm btn-outline-primary">Reservation</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No details available</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="tab-pane fade" id="all" role="tabpanel">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Message</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var notification in Model)
                            {
                                <tr>
                                    <td>@notification.Message</td>
                                    <td>
                                        <span class="badge @(notification.ReadStatus == "Read" ? "bg-success text-white" : "bg-warning text-dark")">@notification.ReadStatus</span>
                                    </td>
                                    <td>@notification.CreatedAt</td>
                                    <td>
                                        @if (notification.RequestId.HasValue)
                                        {
                                            <a href="@Url.Action("Details", "Request", new { id = notification.RequestId })" class="btn btn-sm btn-outline-primary">Details</a>
                                        }
                                        else if (notification.LabUsageLogId.HasValue)
                                        {
                                            <a href="@Url.Action("Details", "LabUsageLogs", new { id = notification.LabUsageLogId })" class="btn btn-sm btn-outline-primary">Reservation</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No details available</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-end mt-4">
                @Html.PagedListPager(Model, page => Url.Action("Notifications", new { page = page }), new PagedListRenderOptions
           {
               LiElementClasses = new List<string> { "page-item" },
               PageClasses = new List<string> { "page-link" }
           })
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
