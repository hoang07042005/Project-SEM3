@model eAdministrationLabs.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-dark text-center">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label for="username">Email</label>
                            <input type="text" name="email" id="email" class="form-control" required />
                        </div>
                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-dark w-100">Login</button>
                        
                    </form>
                    <p class="mt-3 text-center"><a asp-action="ForgotPassword">Forgot Password ?</a></p>
                    <p class="mt-3 text-center">Don't have an account? <a asp-action="Register">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
