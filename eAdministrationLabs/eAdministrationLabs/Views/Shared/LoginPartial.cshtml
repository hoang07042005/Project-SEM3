

<ul class="navbar-nav">
    @if (Context.Session.GetString("FullName") == null)
    {
        <li class="nav-item">
            <a class="nav-link"
               asp-area=""
               asp-controller="Account"
               asp-action="Login"
               style="display: inline-block; padding: 8px 16px; color: white; text-decoration: none; border: 2px solid #ccc; border-radius: 4px; transition: background-color 0.3s, color 0.3s, border-color 0.3s; font-size: 17px">
                LOG IN
            </a>
        </li>
    }
    else
    {
        <li class="nav-item dropdown">
            <span class="nav-link text-white"
                  style="cursor: pointer; outline: none; box-shadow: none; background: transparent; border: none; display: inline-flex; align-items: center; text-decoration: none; font-size: 17px;">
                <img src="~/LayoutLabs/images/Account.png"
                     style="width: 40px; height: 40px; object-fit: cover; outline: none; box-shadow: none; border: none; background: transparent; margin-right: 20px;"
                     alt="" />
                @Context.Session.GetString("FullName")
            </span>

            <!-- Dropdown Menu -->
            <div class="dropdown-menu" aria-labelledby="userDropdown">
                <!-- Mũi tên tam giác -->
                <div class="dropdown-arrow"></div>

                <!-- Dropdown Menu Items -->
                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
            </div>
        </li>
    }
</ul>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var dropdowns = document.querySelectorAll('.nav-item.dropdown');

        dropdowns.forEach(function (dropdown) {
            dropdown.addEventListener('mouseover', function () {
                this.querySelector('.dropdown-menu').classList.add('show');
            });

            dropdown.addEventListener('mouseleave', function () {
                this.querySelector('.dropdown-menu').classList.remove('show');
            });
        });
    });
</script>
