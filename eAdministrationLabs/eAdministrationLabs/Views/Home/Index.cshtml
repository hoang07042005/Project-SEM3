<script>
    $(document).on('click', '.pagination-container a', function (e) {
        e.preventDefault();
        var url = $(this).attr('href');

        $.get(url, function (data) {
            $('#feedback-container').html(data);
        });
    });
</script>

<script>
    function toggleAnswer(element) {
        const answer = element.nextElementSibling; 
        const arrow = element.querySelector("span:last-child"); 

        if (answer.style.display === "none" || !answer.style.display) {
            answer.style.display = "block"; 
            arrow.style.transform = "rotate(90deg)";
        } else {
            answer.style.display = "none"; 
            arrow.style.transform = "rotate(0deg)"; 
        }
    }
</script>

<script>

    const dotsPerRow = 122; // Mỗi dòng sẽ có 124 chấm
    const numberOfRows = 4; // Tổng số dòng là 3

    // Lấy các phần tử container
    const containers = [
        document.getElementById('dotsContainer1'),
        document.getElementById('dotsContainer2'),
        document.getElementById('dotsContainer3'),
        document.getElementById('dotsContainer4')
    ];


    // Sử dụng vòng lặp để tạo các chấm
    for (let row = 0; row < numberOfRows; row++) {
        for (let i = 0; i < dotsPerRow; i++) {
            const dot = document.createElement('div');
            dot.classList.add('dot');
            dot.style.width = '4px';
            dot.style.height = '4px';
            dot.style.backgroundColor = '#dadada';
            dot.style.borderRadius = '50%';

            // Thêm chấm vào đúng container
            containers[row].appendChild(dot);
        }
    }
</script>
